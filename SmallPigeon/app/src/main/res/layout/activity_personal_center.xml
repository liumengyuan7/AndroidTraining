<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".My.PersonalCenter">
    <LinearLayout

        android:background="#259B24"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/personal_center_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/left"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            />
            <TextView
                android:layout_gravity="center"
                android:textSize="25sp"
                android:textColor="#fff"
                android:text="个人信息"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="350dp">
        <LinearLayout
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="头像"

                android:layout_gravity="center"
                android:layout_marginRight="220dp"
                android:textSize="20sp"
                android:textColor="#000000"
                />
            <com.example.smallpigeon.RoundImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/woman"
                android:id="@+id/personal_center_userImg"
                imagecontrol:border_inside_color="#259B24"
                imagecontrol:border_outside_color="#ffffff"
                imagecontrol:border_thickness="1dp"/>
            <ImageView
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/right"
                android:id="@+id/personal_center_updateImg"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#fff"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邮箱/账号"
                android:textSize="20sp"
                android:layout_gravity="left"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:id="@+id/personal_center_user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:layout_marginTop="-28dp"
                android:layout_gravity="right"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#fff"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textSize="20sp"
                android:layout_gravity="left"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:id="@+id/personal_center_nickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:layout_marginTop="-28dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="right"

                />

                <ImageView
                    android:id="@+id/personal_center_updateNickname"
                    android:layout_gravity="right"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/right"
                    android:layout_marginTop="-28dp"
                    />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#fff"

            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的积分"
                android:textSize="20sp"
                android:layout_gravity="left"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:id="@+id/personal_center_user_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:layout_marginTop="-28dp"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#fff"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多"
                android:textSize="20sp"
                android:layout_gravity="left"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                />
            <ImageView
                android:id="@+id/personal_center_more"
                android:layout_gravity="right"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/right"
                android:layout_marginTop="-28dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#fff"

            />
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="安全"
                android:textSize="20sp"
                android:layout_gravity="left"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                />
            <ImageView
                android:id="@+id/personal_center_anquan"
                android:layout_gravity="right"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/right"
                android:layout_marginTop="-28dp"
                />


        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circular"
            android:text="注销登录"
            android:id="@+id/personal_center_SignOut"
            />
    </LinearLayout>
</LinearLayout>