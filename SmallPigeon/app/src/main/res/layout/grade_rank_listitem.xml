<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:id="@+id/user_ranking"
            android:layout_width="30dp"
            android:layout_height="30dp"

            />
        <com.example.smallpigeon.RoundImageView
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/woman"
            android:id="@+id/gradeRank_userImg"
            imagecontrol:border_inside_color="#ffffff"
            imagecontrol:border_outside_color="#ffffff"
            imagecontrol:border_thickness="1dp"/>
        <TextView

            android:id="@+id/gradeRank_userName"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text=""
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            />

    </LinearLayout>
    <LinearLayout
        android:gravity="right"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text=""
            android:textColor="#000"
            android:textSize="20sp"
            android:id="@+id/gradeRank_userPoints"
            />
        <TextView
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text=" åˆ†"
            android:textColor="#000"
            android:textSize="20sp"
            />
    </LinearLayout>
</LinearLayout>
