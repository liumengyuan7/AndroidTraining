<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginOrRegister.ForgetPassword">
    <LinearLayout
        android:gravity="center"
        android:background="#259B24"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <ImageView
            android:id="@+id/forget_password_return"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:src="@mipmap/returnimage"/>
        <TextView

            android:gravity="center"
            android:layout_marginLeft="-20dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="忘记密码"
            android:textSize="25dp"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="left"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="步骤一："
            />
        <EditText
            android:layout_gravity="center"
            android:id="@+id/forget_password_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入你的邮箱账号"
            />

    </LinearLayout>
    <LinearLayout
        android:gravity="left"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="步骤二："
            />
        <EditText
            android:layout_gravity="center"
            android:id="@+id/forget_password_checkCode"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:hint="输入验证码"
            />
        <Button
            android:id="@+id/forget_password_getCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:background="@drawable/circular"
            />

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下一步"
            android:textSize="20sp"
            android:id="@+id/intoNext"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/next"
            android:id="@+id/intoNextImg"
            />
    </LinearLayout>

</LinearLayout>