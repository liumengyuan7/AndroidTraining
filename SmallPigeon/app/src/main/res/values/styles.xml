<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoTitleTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/myColorBlue</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="popwin_anim_style" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popwindowstart</item>
        <item name="android:windowExitAnimation">@anim/popwindowexit</item>
    </style>

    <style name="popmatch_anim_style" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/matchpopupwindowstart</item>
        <item name="android:windowExitAnimation">@anim/popwindowexit</item>

    </style>

    <style name="BottomSheetStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
    </style>
</resources>
