<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoTitleTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/myColorBlue</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="popwin_anim_style" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popwindowstart</item>
        <item name="android:windowExitAnimation">@anim/popwindowexit</item>
    </style>

    <style name="popmatch_anim_style" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/matchpopupwindowstart</item>
        <item name="android:windowExitAnimation">@anim/popwindowexit</item>
    </style>
</resources>
